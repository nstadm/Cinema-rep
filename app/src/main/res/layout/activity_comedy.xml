<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/comedy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="КОМЕДІЇ"
        android:textSize="32sp"
        android:fontFamily="@font/bebas"
        android:textColor="@color/red"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/comedy_title"
        android:layout_marginTop="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <!-- Первый фильм -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/image_king_of_staten_island"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/king_of_staten_island"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_toEndOf="@id/image_king_of_staten_island"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/title_king_of_staten_island"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='"THE KING OF STATEN ISLAND" (2020)'
                    android:fontFamily="@font/bebas"
                    android:textColor="@color/black"
                    android:textFontWeight="1000"
                    android:gravity="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/description_king_of_staten_island"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bebas"
                    android:text='Режисер Джадд Апатоу, у головній ролі Піт Девідсон. Фільм частково заснований на житті Девідсона і поєднує в собі гумор та драму, розповідаючи історію молодого чоловіка, який намагається знайти своє місце у житті після смерті батька.'
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/price_king_of_staten_island"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="450 ГРН"
                    android:fontFamily="@font/bebas"
                    android:textColor="@color/black"
                    android:textFontWeight="1000"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Второй фильм -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/image_dont_look_up"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/dont_look_up"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/image_dont_look_up"
                android:gravity="center"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/title_dont_look_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='"DONT LOOK UP" (2021)'
                    android:fontFamily="@font/bebas"
                    android:textColor="@color/black"
                    android:textFontWeight="1000"
                android:textSize="14sp" />

                <TextView
                    android:id="@+id/description_dont_look_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebas"
                    android:textColor="@color/black"
                    android:text='Ця сатирична комедія розповідає про двох астрономів, які намагаються попередити світ про наближення астероїда, що знищить Землю. Фільм отримав позитивні відгуки за своє дотепне висвітлення сучасних проблем суспільства та медіа.'
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/price_dont_look_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="550 ГРН"
                    android:fontFamily="@font/bebas"
                    android:textColor="@color/black"
                    android:textFontWeight="1000"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Третий фильм -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/image_palm_springs"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/palm_springs"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/image_palm_springs"
                android:gravity="center"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/title_palm_springs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='"PALM SPRINGS" (2020)'
                    android:fontFamily="@font/bebas"
                    android:textColor="@color/black"
                    android:textFontWeight="1000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/description_palm_springs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bebas"
                    android:text='У головних ролях Енді Семберг та Крістін Міліоті. Ця романтична комедія з елементами наукової фантастики розповідає про двох незнайомців, що застрягли у часовій петлі на весіллі. Фільм отримав високу оцінку за оригінальність та чудову гру акторів.'
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/price_palm_springs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 ГРН"
                    android:fontFamily="@font/bebas"
                    android:textColor="@color/black"
                    android:textFontWeight="1000"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Четвертый фильм -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/image_free_guy"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/free_guy"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/image_free_guy"
                android:gravity="center"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/title_free_guy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebas"
                    android:text='"FREE GUY" (2021)'
                    android:textColor="@color/black"
                    android:textFontWeight="1000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/description_free_guy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebas"
                    android:textColor="@color/black"
                    android:text='У головній ролі Раян Рейнольдс. Ця екшн-комедія розповідає про банківського клерка, який дізнається, що він персонаж у відеогрі. Фільм отримав позитивні відгуки за свою захопливість та гумор.'
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/price_free_guy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebas"
                    android:text="450 ГРН"
                    android:textColor="@color/black"
                    android:textFontWeight="1000"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
